<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="@dimen/landscape_featured_height"
    android:layout_marginBottom="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no"
        tools:src="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/shadow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:src="@drawable/linear_gradient_bg"
        android:importantForAccessibility="no" />

    <androidx.cardview.widget.CardView
        android:id="@+id/poster_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/normal_margin"
        app:layout_constraintDimensionRatio="H,7:5"
        app:layout_constraintLeft_toRightOf="@id/left_side_barrier"
        app:layout_constraintTop_toBottomOf="@id/top_side_barrier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        tools:text="@tools:sample/lorem/random"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:maxLines="3"
        android:textSize="18sp"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginBottom="2dp"
        app:layout_constraintWidth_max="450dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintRight_toLeftOf="@id/right_side_barrier"
        app:layout_constraintLeft_toRightOf="@id/poster_holder"
        app:layout_constraintBottom_toTopOf="@id/description" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="14sp"
        android:alpha=".9"
        android:layout_marginBottom="36dp"
        android:maxLines="2"
        android:layout_marginEnd="10dp"
        app:layout_constraintWidth_max="375dp"
        app:layout_constraintHorizontal_bias="0"
        tools:text="@tools:sample/lorem/random"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tags" />

    <TextView
        android:id="@+id/tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Action Comedy Fantasy"
        android:alpha=".75"
        app:layout_constraintRight_toLeftOf="@id/right_side_barrier"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp"
        android:textSize="14sp"
        android:layout_marginRight="@dimen/normal_margin"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginBottom="2dp"
        android:alpha="0.75"
        android:text="Ongoing"
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tags"
        app:layout_constraintRight_toLeftOf="@id/right_side_barrier"
        tools:ignore="RtlHardcoded,TextContrastCheck" />

    <View
        android:id="@+id/right_side_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/left_side_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:id="@+id/top_side_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>