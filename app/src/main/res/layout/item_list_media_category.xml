<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/media_catalog_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/large_margin"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded"
        tools:text="Category title" />

    <ImageView
        android:id="@+id/expand"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_circle_white"
        android:src="@drawable/ic_back"
        android:padding="12dp"
        android:scaleX="-1"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/media_catalog_category_title"
        app:layout_constraintBottom_toBottomOf="@id/media_catalog_category_title"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/media_catalog_category_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/large_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/media_catalog_category_title"
        tools:listitem="@layout/grid_media_catalog" />

</androidx.constraintlayout.widget.ConstraintLayout>